{
  "name": "nodejs-babel-boilerplate",
  "version": "1.0.0",
  "main": "dist/main.js",
  "repository": "git@github.com:damiaoterto/nodejs-babel-boilerplate.git",
  "author": "Francisco Dami√£o Terto <hi@damiaojunior.me>",
  "license": "MIT",
  "scripts": {
    "prebuild": "npx rimraf dist/",
    "dev": "npx nodemon --exec babel-node -r dotenv/config src/main.js",
    "build": "npx babel src/ --out-dir dist/",
    "lint": "npx eslint --fix src --ext .js",
    "start": "node -r dotenv/config dist/main.js"
  },
  "dependencies": {
    "dotenv": "^16.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.6",
    "@babel/core": "^7.18.6",
    "@babel/node": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.2",
    "nodemon": "^2.0.19",
    "rimraf": "^3.0.2"
  }
}
